%br

%table.table.table-condensed.table-striped.table-hover.table-bordered
  %tr
    %th No.
    %th Location
    %th 

  - @origins.each do |origin|
    %tr
      %td= origin.id
      %td= origin.location
      -# if current_user.try(:admin)
      %td= link_to 'Edit', edit_origin_path(origin)
      %td= link_to 'Destroy', origin, :method => :delete, :data => { :confirm => 'Are you sure?' }

