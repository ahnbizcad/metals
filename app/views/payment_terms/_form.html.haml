= form_for @payment_term do |f|
  - if @payment_term.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment_term.errors.count, "error")} prohibited this payment_term from being saved:"
      %ul
        - @payment_term.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :payment_type
    = f.text_field :payment_type
  .form-group
    = f.label :text
    = f.text_field :text
  .actions
    = f.submit 'Save'
