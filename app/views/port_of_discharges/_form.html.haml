= form_for @port_of_discharge, html: { class: "form-horizontal" } do |f|
  - if @port_of_discharge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@port_of_discharge.errors.count, "error")} prohibited this port_of_discharge from being saved:"
      %ul
        - @port_of_discharge.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :city
    = f.text_field :city
  .form-group
    = f.label :country
    = f.text_field :country
    
  .actions
    = f.submit 'Save'
