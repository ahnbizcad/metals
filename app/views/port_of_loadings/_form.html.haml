= form_for @port_of_loading, html: { class: "form-horizontal" } do |f|
  - if @port_of_loading.errors.any?
    #error_explanation
      %h2= "#{pluralize(@port_of_loading.errors.count, "error")} prohibited this port_of_loading from being saved:"
      %ul
        - @port_of_loading.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :city
    = f.text_field :city, autofocus: true
    
  .form-group
    = f.label :country
    = f.text_field :country

  .actions
    = f.submit 'Save'
