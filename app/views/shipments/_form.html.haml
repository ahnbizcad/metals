= form_for @shipment, html: { class: "form-horizontal" } do |f|
  - if @shipment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shipment.errors.count, "error")} prohibited this shipment from being saved:"
      %ul
        - @shipment.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :date, class: "control-label col-xs-2" 
    .col-xs-10
      = f.text_field :date, class: "form-control" 

  .actions
    = f.submit 'Save'
